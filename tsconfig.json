{
  "compilerOptions": {
    "strict": true,
    "module": "nodenext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".github"]
}